{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "newLine": "LF",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src-ts",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}